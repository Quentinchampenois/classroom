{% extends 'base.html.twig' %}

{% block title %}Classe{% endblock %}

{% block body %}
    <h1>Classe</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ classe.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ classe.name }}</td>
            </tr>
            <tr>
                <th>Students</th>
                <td>
                    {% for student in classe.students %}
                        {{ student.name }}
                    {% else %}
                        Empty classe
                    {% endfor %}
                </td>
            </tr>

        </tbody>
    </table>

    <a href="{{ path('classe_index') }}">back to list</a>

    <a href="{{ path('classe_edit', {'id': classe.id}) }}">edit</a>

    {{ include('classe/_delete_form.html.twig') }}
{% endblock %}
