{% extends 'base.html.twig' %}

{% block title %}Classe index{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12 text-center">
            <h1>{% trans %}app.features.classroom.index.title{% endtrans %}</h1>
            <small>{% trans %}app.features.classroom.index.subtitle{% endtrans %}</small>
        </div>
    </div>

    <div class="row">
        <table class="table col-10 offset-1">
            <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for classe in classes %}
                <tr>
                    <td>{{ classe.id }}</td>
                    <td>{{ classe.name }}</td>
                    <td>
                        <a href="{{ path('classe_show', {'id': classe.id}) }}">show</a>
                        <a href="{{ path('classe_edit', {'id': classe.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="col-12 text-center">
        <a href="{{ path('classe_new') }}">{% trans %}app.features.classroom.index.actions.create{% endtrans %}</a>
    </div>
{% endblock %}
